{
    "compilerOptions": {
        // Compile plain Javascript
        "allowJs": true,
        "rootDir": "src",
        "outDir": "lib",

        // Transpilation options
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "alwaysStrict": true,
        "importHelpers": true,

        // "Linting" options
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": false
    },
    "include": [
      "src/**/*"
    ]
}